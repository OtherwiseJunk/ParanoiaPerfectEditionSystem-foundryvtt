<form class="paranoia-gm-command-center paranoia flexcol">
    <section class="sheet-body">
        <div class="paranoia-container">
            <p class="notes">Welcome, Gamemaster. This is your central hub for launching various game management tools.</p>
        </div>

        <div class="paranoia-container">
            <h3 class="paranoia-header">GM Tools</h3>
            <div class="gm-tools button-group">
                <button type="button" id="open-skill-draft"><i class="fas fa-drafting-compass"></i> Open Skill Draft</button>
                <button type="button" id="open-treason-circle"><i class="fas fa-user-secret"></i> Open Treason Circle</button>
            </div>
        </div>

        <div class="paranoia-container">
            <h3 class="paranoia-header">Active Player Characters</h3>
            <div class="player-character-header">
                <div>Character</div>
                <div>Health</div>
                <div>Treason Level</div>
                <div>Vital Information</div>
                <div>Buttons</div>
                <div>Actions</div>
            </div>
            <div class="player-character-list">
                {{#each playerActors as |actor|}}
                <div class="player-character-entry" data-actor-id="{{actor.id}}">
                    <div class="character-name rollable"><i class="fas fa-user"></i> {{actor.name}}</div>
                    <div class="stat-bars">
                        {{{healthBar actor.health actor.healthDescription}}}
                        {{{moxieBar actor.moxie actor.moxieMax}}}
                    </div>
                    <div>{{{treasonBar actor.treasonFlags actor.treasonDescription}}}</div>
                    <div class="vital-info">
                        <div><strong>MP:</strong> {{{actor.mutantPower}}}</div>
                        <div><strong>SS:</strong> {{{actor.secretSociety}}}</div>
                        <div><strong>MBD:</strong> {{actor.mandatoryBonusDuty}}</div>
                    </div>
                    <div class="button-info">
                        <div><strong>Violence:</strong> {{{actor.violenceButton}}}</div>
                        <div><strong>Treason:</strong> {{{actor.treasonButton}}}</div>
                    </div>
                    <div class="actions"><!-- Action buttons could go here --></div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
</form>