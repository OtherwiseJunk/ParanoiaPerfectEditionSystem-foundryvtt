<form class = "paranoia">
    {{#if (eq state.status "pending")}}
    <div class="form-group">
        <label>Select Participants</label>
        <p class="notes">Select all player characters who will participate in the skill draft.</p>
        <select name="participants" multiple>
            {{#each playerActors}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>
    <button type="button" class="start-draft"><i class="fas fa-play"></i> Start Draft</button>

    {{else if (eq state.status "active")}}
    <h2>Draft in Progress</h2>
    <p><strong>Round:</strong> +{{state.round}} / -{{state.round}}</p>
    <p><strong>Current Turn:</strong> {{currentPlayerName}}</p>

    <h3>Current Assignments</h3>
    <ol>
        {{#each state.participants}}
        <li>
            <strong>{{#with (lookup @root.actors this)}}{{this.name}}{{/with}}:</strong>
            <span class="skill-tags">
                {{#each (lookup @root.state.assignments this)}}<span class="skill-tag {{@key}}">{{formatSkillName @key}}: {{#if (gt this 0)}}+{{/if}}{{this}} </span>{{/each}}
            </span>
        </li>
        {{/each}}
    </ol>
    {{else}}
    <p>Draft is complete! All skills have been applied.</p>
    {{/if}}
</form>